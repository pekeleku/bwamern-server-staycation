<!-- DataTales Example -->

<div class="tab-pane fade" id="show-activity">
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/activity"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Enter Name "
                required
              />
            </div>
            <div class="form-group">
              <label for="name">Type</label>
              <input
                type="text"
                class="form-control"
                id="type"
                name="type"
                placeholder="Enter type"
                required
              />
            </div>
            <div class="form-group">
              <label for="name">Image</label>
              <input
                type="file"
                class="form-control"
                id="image"
                name="image"
                required
              />
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTableActivity"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image Url</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
